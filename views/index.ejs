<!DOCTYPE html>
<html lang="es">

<!-- HEAD -->
<%- include("partials/head") %>
<!-- HEAD -->
<body>
	<!-- Header -->
	<%- include("partials/header") %>
		<!-- /Header -->

		<!-- Banner -->
		<div class="banner"></div>
		<!-- /Banner -->

		<!-- ultima visita -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Basado en tu Ãºltima visita</h2>
				</div>
				<% productos.forEach(producto=> { %>               
					<% if (producto.category === "visited") {%> 
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/detalle/<%= producto.id %> ">
								<figure class="product-box_image">
									<img src="/images/<%=producto.image%>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>
										<%=producto.price%>
									</h2>
									<span> <%= producto.discount %> % OFF</span>
									<p> <%= producto.description %> </p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
					<%}; %>   <!-- CIERRO EL forEach -->
					<%}); %>  <!-- CIERRO EL IF -->
			</div>
		</div>
		<!-- /Ofertas -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Ofertas</h2>
				</div>
				<% productos.forEach(producto=> { %>
					<% if (producto.category === "in-sale") {%> 
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/detalle/<%= producto.id %> ">
								<figure class="product-box_image">
									<img src="/images/<%=producto.image%>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>
										<%=producto.price%>
									</h2>
									<span> <%= producto.discount %> % OFF</span>
									<p> <%= producto.description %> </p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
					<%}; %>
					<%}); %>
			</div>
		</div>


		<!-- footer -->
		<%- include("partials/footer") %>
			<!-- /footer -->

			
</body>

</html>